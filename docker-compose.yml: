version: '3.9'
services:
  app:
    build: .
    image: my-java-app
    depends_on:
      - db
    environment:
      DB_URL: jdbc:postgresql://db:5432/mydb
      DB_USER: postgres
      DB_PASSWORD: postgres
    ports:
      - "8080:8080"

  db:
    image: postgres:15
    container_name: pgdb
    restart: always
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: mydb
    ports:
      - "5432:5432"
